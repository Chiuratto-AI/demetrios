{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Demetrios",
  "scopeName": "source.demetrios",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#characters" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#effects" },
    { "include": "#modifiers" },
    { "include": "#units" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#functions" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.documentation.demetrios",
          "match": "///.*$"
        },
        {
          "name": "comment.line.double-slash.demetrios",
          "match": "//.*$"
        },
        {
          "name": "comment.block.demetrios",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.demetrios",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.demetrios",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "characters": {
      "patterns": [
        {
          "name": "string.quoted.single.demetrios",
          "match": "'([^'\\\\]|\\\\.)'"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.demetrios",
          "match": "\\b(if|else|while|for|loop|match|return|break|continue|in|as)\\b"
        },
        {
          "name": "keyword.declaration.demetrios",
          "match": "\\b(fn|let|mut|const|struct|enum|type|impl|trait|pub|module|import|export)\\b"
        },
        {
          "name": "keyword.effect.demetrios",
          "match": "\\b(effect|handler|handle|perform|resume|with)\\b"
        },
        {
          "name": "keyword.async.demetrios",
          "match": "\\b(async|await|spawn)\\b"
        },
        {
          "name": "keyword.probabilistic.demetrios",
          "match": "\\b(sample|observe|infer)\\b"
        },
        {
          "name": "keyword.proof.demetrios",
          "match": "\\b(proof|invariant|requires|ensures|assert|assume)\\b"
        },
        {
          "name": "keyword.other.demetrios",
          "match": "\\b(where|extern|unsafe)\\b"
        },
        {
          "name": "constant.language.demetrios",
          "match": "\\b(true|false|self|Self)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.primitive.demetrios",
          "match": "\\b(i8|i16|i32|i64|i128|isize|u8|u16|u32|u64|u128|usize|f32|f64|bool|char|str|String)\\b"
        },
        {
          "name": "storage.type.demetrios",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "effects": {
      "patterns": [
        {
          "name": "entity.name.type.effect.demetrios",
          "match": "\\b(IO|Mut|Alloc|Panic|Async|GPU|Prob|Div)\\b"
        }
      ]
    },
    "modifiers": {
      "patterns": [
        {
          "name": "storage.modifier.demetrios",
          "match": "\\b(linear|affine|move|copy|drop|kernel|device|shared|gpu)\\b"
        }
      ]
    },
    "units": {
      "patterns": [
        {
          "name": "constant.numeric.unit.demetrios",
          "match": "\\b[0-9][0-9_]*\\.?[0-9_]*([eE][+-]?[0-9]+)?_[a-zA-Z][a-zA-Z0-9_/]*\\b"
        },
        {
          "name": "support.type.unit.demetrios",
          "match": "<[a-zA-Z][a-zA-Z0-9_/\\*\\^-]*>"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.demetrios",
          "match": "\\b[0-9][0-9_]*\\.[0-9][0-9_]*([eE][+-]?[0-9]+)?\\b"
        },
        {
          "name": "constant.numeric.integer.hex.demetrios",
          "match": "\\b0x[0-9a-fA-F][0-9a-fA-F_]*\\b"
        },
        {
          "name": "constant.numeric.integer.binary.demetrios",
          "match": "\\b0b[01][01_]*\\b"
        },
        {
          "name": "constant.numeric.integer.octal.demetrios",
          "match": "\\b0o[0-7][0-7_]*\\b"
        },
        {
          "name": "constant.numeric.integer.demetrios",
          "match": "\\b[0-9][0-9_]*\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arrow.demetrios",
          "match": "(->|=>|<-)"
        },
        {
          "name": "keyword.operator.comparison.demetrios",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.logical.demetrios",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.arithmetic.demetrios",
          "match": "(\\+|-|\\*|/|%|\\^)"
        },
        {
          "name": "keyword.operator.bitwise.demetrios",
          "match": "(&|\\||~|<<|>>)"
        },
        {
          "name": "keyword.operator.assignment.demetrios",
          "match": "(=|\\+=|-=|\\*=|/=|%=|&=|\\|=|\\^=|<<=|>>=)"
        },
        {
          "name": "keyword.operator.range.demetrios",
          "match": "(\\.\\.=|\\.\\.\\.|\\.\\.|\\?)"
        },
        {
          "name": "keyword.operator.namespace.demetrios",
          "match": "::"
        },
        {
          "name": "keyword.operator.reference.demetrios",
          "match": "&!|&"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.demetrios",
          "match": "\\b([a-z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        },
        {
          "name": "entity.name.function.macro.demetrios",
          "match": "\\b([a-z_][a-zA-Z0-9_]*)!"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.demetrios",
          "match": "\\b[a-z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
